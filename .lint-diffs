# Disbale pylint
[pylint]
extensions=

# Disable clang-tidy (can't work without a compilation database)
[clang-tidy]
extensions=

[flake8]
extensions=.py
command=flake8 --max-line-length 88

[clang-format]
extensions=.c .cc .cpp .cxx .c++ .h .hpp
command=./tools/clang-format-check.py
regex=(?P<file>[^:]+):(?P<line>\d+):[^:]+: (?P<err>.+)
